<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="DAFTAR"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.016"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <EditText
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPrimary"
        android:hint="                             masukan no telepon"
        android:textColor="@color/colorPrimary"
        android:inputType="number"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="199dp"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:hint="KIRIM KODE VERIVIKASI"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="                        anda dapat login dengan cara cara ini"
        android:textColorHint="@color/colorPrimary"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="405dp" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="62dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/ig2"
        android:background="@android:color/black"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/fbb2" />


    <ImageView
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/google" />

</LinearLayout>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:hint="       i have read and agreed to abide by this Agreement"
        android:textColorHint="@color/colorPrimary"/>




</LinearLayout>
